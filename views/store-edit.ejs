<%- include("./partials/header") %>

<div class="container">
    <form action="/stores/<%=data._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="store-name" class="col-form-label">Store Name:</label>
            <input type="text" name="storeName" class="form-control"
                id="store-name" value="<%=data.storeName%>">
        </div>
        <div class="form-group">
            <label for="store-phoneNumber"
                class="col-form-label">Store Contact:</label>
            <input type="number" name="storeContact" class="form-control"
                id="store-phoneNumber" value="<%=data.storeContact%>">
        </div>
        <div class=" form-group">
            <label for="store-location"
                class="col-form-label">Store Address:</label>
            <input type="text" name="storeAddress" class="form-control"
                id="store-location" value="<%=data.storeAddress%>">
        </div>
        <div class=" form-group">
            <label for="store-image" class="col-form-label">image
                file:</label>
            <input type="file" name="storeImage" class="form-control"
                id="store-image" value="<%=data.storeImage%>">
        </div>
        <div class=" modal-footer">
            <button type="button" class="btn btn-secondary"
                data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

<%- include("./partials/footer") %>