<%- include("./partials/header") %>

<div class="container">
    <form action="/restaurants/<%=data._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="restaurant-name" class="col-form-label">name:</label>
            <input type="text" name="name" class="form-control"
                id="restaurant-name" value="<%=data.name%>">
        </div>
        <div class="form-group">
            <label for="restaurant-phoneNumber"
                class="col-form-label">phoneNumber:</label>
            <input type="number" name="phoneNumber" class="form-control"
                id="restaurant-phoneNumber" value="<%=data.phoneNumber%>">
        </div>
        <div class=" form-group">
            <label for="restaurant-location"
                class="col-form-label">location:</label>
            <input type="text" name="location" class="form-control"
                id="restaurant-location" value="<%=data.location%>">
        </div>
        <div class=" form-group">
            <label for="restaurant-image" class="col-form-label">image
                file:</label>
            <input type="text" name="image" class="form-control"
                id="restaurant-image" value="<%=data.image%>">
        </div>
        <div class=" modal-footer">
            <button type="button" class="btn btn-secondary"
                data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

<%- include("./partials/footer") %>